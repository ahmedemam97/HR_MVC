@model HR.BL.ModelDto.EmployeeDto
@inject HR.BL.Interfaces.ICountryRep country
@{
    ViewData["Title"] = "Delete";
}

<div class="block-header">
    <h2>Delete Employee</h2>
</div>


<form class="form-group" asp-controller="Employee" asp-action="Delete">

    <br />

    <center>
        <h1>Are You Sure To Delete This Data ? </h1>
    </center>

    <br />


    <label asp-for="Name">Name</label>
    <input type="text" class="form-control" asp-for="Name" disabled />
    <br />


    <label asp-for="Salary">Salary</label>
    <input type="text" class="form-control" asp-for="Salary" disabled />
    <br />

    <label asp-for="Email">Email</label>
    <input type="text" class="form-control" asp-for="Email" disabled />
    <br />

    <label asp-for="Address">Address</label>
    <input type="text" class="form-control" asp-for="Address" disabled />
    <br />

    <label asp-for="HireDate">Hire Date</label>
    <input type="date" class="form-control" asp-for="HireDate" disabled />
    <br />


    <label asp-for="Notes">Notes</label>
    <textarea rows="4" class="form-control" asp-for="Notes" disabled></textarea>
    <br />

    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="" disabled>
        <label asp-for="IsActive">Is Active</label>
    </div>
    <br />

    <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList" disabled>
        <option>Choose Department</option>
    </select>
    <br />

    <div>
        <select id="CountryList" disabled>
            <option>Choose Country</option>
            @foreach (var item in country.Get())
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <div>
        <select id="CityList" disabled>
            <option>Choose City</option>
        </select>
    </div>


    <div>
        <select asp-for="DistrictId" disabled>
            <option>Choose District</option>
        </select>
    </div>

    </div>

    <center>
        <a class="btn btn-primary" asp-controller="Employee" asp-action="Index">Employees</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </center>

</form>


